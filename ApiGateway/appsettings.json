{
  "ReverseProxy": {
    "Routes": {
      "auth_route": {
        "ClusterId": "auth_cluster",
        "Match": { "Path": "/api/auth/{**catch-all}" }
      },
      "document_route": {
        "ClusterId": "doc_cluster",
        "Match": { "Path": "/api/document/{**catch-all}" }
      },
      "ai_route": {
        "ClusterId": "ai_cluster",
        "Match": { "Path": "/api/ai/{**catch-all}" }
      },
      "notify_route": {
        "ClusterId": "notify_cluster",
        "Match": { "Path": "/api/notify/{**catch-all}" }
      }
    },
    "Clusters": {
      "auth_cluster": {
        "Destinations": {
          "auth": { "Address": "https://localhost:5001/" }
        }
      },
      "doc_cluster": {
        "Destinations": {
          "doc": { "Address": "https://localhost:5002/" }
        }
      },
      "ai_cluster": {
        "Destinations": {
          "ai": { "Address": "https://localhost:5003/" }
        }
      },
      "notify_cluster": {
        "Destinations": {
          "notify": { "Address": "https://localhost:5004/" }
        }
      }
    }
  }

}
